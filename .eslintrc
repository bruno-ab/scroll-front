{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": ["node_modules", "src/"]
        }
      }
    },
    "rules": {
      "react/jsx-one-expression-per-line": 0,
      "react/jsx-filename-extension": 0,
      "linebreak-style": 0,
      "comma-dangle": 0,
      "no-const-assign": "warn",
      "no-this-before-super": "warn",
      "no-undef": "warn",
      "no-continue": "off",
      "no-unreachable": "warn",
      "no-unused-vars": "warn",
      "constructor-super": "warn",
      "valid-typeof": "warn",
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
      "react",
      "jsx-a11y",
      "import",
      "module-resolver"
    ]
  }